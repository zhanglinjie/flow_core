<div class="container">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h2>
      <%= @pipeline.name %>
    </h2>
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to 'Edit', edit_pipeline_path(@pipeline), class: "btn btn-primary mr-2" %>
      <%= link_to 'Back', pipelines_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div>
    <table class="table table-striped table-borderless">
      <tbody>
      <tr>
        <th scope="row">ID</th>
        <td><%= @pipeline.id %></td>
      </tr>
      <tr>
        <th scope="row">Name</th>
        <td><%= @pipeline.name %></td>
      </tr>
      <tr>
        <th scope="row">Created at</th>
        <td><%= time_tag @pipeline.created_at %></td>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h4>
      Diagram
    </h4>
    <div class="btn-toolbar mb-2 mb-md-0">
    </div>
  </div>

  <p class="text-center">
    <%= @pipeline.to_graph2.output(svg: String).html_safe %>
  </p>

  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h4>
      Steps
    </h4>
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to 'New Step', new_pipeline_step_path(@pipeline), class: "btn btn-primary" %>
    </div>
  </div>

  <div>
    <table class="table table-borderless table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Type</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @pipeline.steps.each do |step| %>
        <tr>
          <td><%= step.id %></td>
          <td><%= step.name %></td>
          <td><%= step.type.present? ? step.model_name.human : nil %></td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
