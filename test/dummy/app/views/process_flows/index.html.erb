<div class="container">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
      Process flows
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <%= link_to 'New Process flow', new_process_flow_path, class: "btn btn-primary" %>
    </div>
  </div>

  <table class="table table-borderless table-hover">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Type</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @process_flows.each do |process_flow| %>
      <tr>
        <td><%= process_flow.id %></td>
        <td><%= process_flow.name %></td>
        <td><%= process_flow.type %></td>
        <td>
          <%= link_to 'Show', process_flow_path(process_flow) %> |
          <%= link_to 'Edit', edit_process_flow_path(process_flow) %>
          <%= link_to 'Destroy', process_flow_path(process_flow), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
